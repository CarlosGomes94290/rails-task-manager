<h1>Tasks <%=Task.count %></h1>
<h2><%= link_to "create new", new_task_path %></h2>

<%= @tasks.each do |task| %>

<h2><%= task.name %></h2>
<h2><%= task.content %></h2>
<p><%= link_to "show", task_path(task) %></p>
<p><%= link_to "edit", edit_task_path(task) %></p>
<p><%= link_to "delete", task_path(task), method: :delete %></p>
<p><%= link_to "copy", copy_path(task) %></p>
<% end %>




